<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="538dp"
        android:layout_height="255dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-186dp"
        android:layout_marginTop="-99dp"
        android:layout_marginEnd="59dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="529dp"
        android:layout_height="202dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-173dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="55dp"
        app:srcCompat="@drawable/over_circle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Welcome!"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="117dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="83dp"
        android:text="Please answer the following."
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/usernameText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="520dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad" />

    <AutoCompleteTextView
        android:id="@+id/countryText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="310dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:textColor="@color/primary_color"
        android:layout_marginBottom="450dp"
        android:background="@drawable/rectangle_rad" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phoneNumberText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="380dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextEditLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="520dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/secondary_color"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordTextEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_rad"
            android:inputType="textPassword"
            android:textColor="@color/primary_color" />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/interestText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="240dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/birthTimeText"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="170dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/birthDateText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="170dp"
        android:textColor="@color/primary_color"
        android:background="@drawable/rectangle_rad"
        android:singleLine="true" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/usernameText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="Username"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="1dp"
        android:text="Password"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/interestText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="1dp"
        android:text="Interest"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/birthTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/birthTimeText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="1dp"
        android:text="Birth Time"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stateSpinner"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="1dp"
        android:text="State"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emailText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="E-mail Address"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phoneNumberText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="Phone Number"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/countryText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="Country"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/genderSpinner"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="Gender"
        android:textColor="@color/primary_color" />

    <TextView
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/birthDateText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="1dp"
        android:text="Birth Date"
        android:textColor="@color/primary_color" />

    <Spinner
        android:id="@+id/stateSpinner"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="310dp"
        android:background="@drawable/rectangle_rad"
        android:textColor="@color/primary_color"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/genderSpinner"
        android:singleLine="true"
        android:layout_width="141dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="240dp"
        android:textColor="@color/primary_color"
        android:autofillHints="none"
        android:background="@drawable/rectangle_rad" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/primary_color"
        android:text="SUBMIT" />


</RelativeLayout>

